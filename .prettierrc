{
    "singleQuote": true,
    "printWidth": 120,
    "useTabs": true,
    "overrides": [
        {
            "files": "*.{yml,yaml,json}",
            "options": {
                "useTabs": false,
                "tabWidth": 2,
            }
        },
        {
            "files": "*.md",
            "options": {
                "printWidth": 100,
                "proseWrap": "always"
            }
        }
    ]
}